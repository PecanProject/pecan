<?xml version="1.0"?>
<pecan>
  <outdir>/tmp/</outdir>
  <!-- PFTs --> 
  <pfts>
    <pft>
      <name>ebifarm.pavi</name>
      <outdir>/tmp/</outdir>
      <constants>
        <num>15</num>
        <phenology>2</phenology>
        <max_dbh>0.78</max_dbh>
        <hgt_min>2.0</hgt_min>
        <dark_respiration_factor>0.015</dark_respiration_factor>
        <qsw>0.0</qsw>
        <mort1>1.0</mort1>
        <plant_min_temp>-100</plant_min_temp>
        <storage_turnover_rate>0</storage_turnover_rate>
        <r_fract>0.25</r_fract>
      </constants>
    </pft> <!-- can repeat for multiple pfts -->
    <pft>
      <name>foo</name>
    </pft>
  </pfts>
  <!-- database -->
  <database>
    <userid>ebi_analys_user</userid>
    <passwd>b742xsAu</passwd>
    <location>ebi-forecast.igb.illinois.edu</location>
    <name>ebi_analysis</name>
  </database>
  <!-- meta analysis -->
  <meta.analysis>
    <iter>1000</iter>
    <random.effects>FALSE</random.effects>
  </meta.analysis>
  <!-- ensemble -->
  <ensemble>
    <size>1</size>
  </ensemble>
  <!-- sensitivity analysis -->
  <sensitivity.analysis>
    <start.year>1995</start.year>
    <end.year>1998</end.year>
    <quantiles><!-- note, generally would use either quantile _or_ sigma, but not both.
		    both are included here for testing / demonstration
		    if neither are included, will use default quantiles = pnorm(-3:3) --> 
      <quantile>0.35</quantile> 
      <quantile>0.65</quantile> 
      <sigma>-3</sigma>
      <sigma>3</sigma>
    </quantiles>
  </sensitivity.analysis>
  <!-- model settings, using ED2 in this test -->
  <model>
    <name>ED2</name>
    <edin>ed2in-template-pavi</edin>
    <binary>/home/dlebauer/EDBRAMS/ED/build/ed_2.1-opt</binary>
    <!-- Other ED2 inputs                   -->
    <veg>/home/mdietze/data/oge2OLD/OGE2_</veg>
    <soil>/home/mdietze/data/faoOLD/FAO_</soil>
    <inputs>/home/mdietze/data/ed_inputs/</inputs>
    <config.header>
      <!-- Radiation settings -->
      <radiation>
	<lai_min>0.01</lai_min>
      </radiation>
      <!-- Hydrology settings -->
      <hydro>
	<useTOPMODEL>1</useTOPMODEL>
	<useRUNOFF>0</useRUNOFF>
	<outputPeriod>96</outputPeriod>
	<MoistdWT>100000000.0</MoistdWT>
	<MoistRateTuning>0.4</MoistRateTuning>
	<FracLiqRunoff>0.00001</FracLiqRunoff>
	<dewmax>1.0e-8</dewmax>
      </hydro>
      <!-- ED2 Misc settings -->
      <ed_misc>
	<output_month>12</output_month>
	<burnin>1</burnin>
      </ed_misc>
    </config.header>
  </model>
  <!-- model run settings -->
  <run>
    <site>
      <psscss>/home/scratch/dlebauer/pecan/edin/ebifarm/ebifarm.</psscss>
      <name>EBI Energy Farm - Switchgrass</name>
      <lat>40.06</lat>
      <lon>-88.20</lon>
      <met>/home/scratch/dlebauer/pecan/edin/ebifarm/met/ED_MET_DRIVER_HEADER</met>
      <met.start>1996</met.start>
      <met.end>1998</met.end>
    </site>
    <start.date>1996/01/01</start.date>
    <end.date>1998/12/31</end.date>
    <host>
      <ed><phenol.scheme>1</phenol.scheme></ed>
      <name>ebi-cluster.igb.illinois.edu</name>
      <rundir>/home/dlebauer/EDBRAMS/ED/run/</rundir>
      <inputs>/home/scratch/dlebauer/edin/</inputs>
      <outdir>/home/scratch/dlebauer/out/ebifarm/fast/</outdir>
    </host>
    <priority>-5</priority>
    <scratch>tmp</scratch>
  </run>
</pecan>
