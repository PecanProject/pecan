# PEcAn BASGRA -- Makevars
# Author: Istem Fer, Alexey Shiklomanov

PARAMS = \
    parameters_site.o \
    parameters_plant.o

NEEDS_PARAMS = \
    environment.o \
    resources.o \
    soil.o \
    plant.o \
    set_params.o

ENVIRONMENT = environment.o

NEEDS_ENVIRONMENT = plant.o BASGRA.o

BASGRA = BASGRA.o

OBJECTS = $(PARAMS) $(NEEDS_PARAMS) $(BASGRA)


.PHONY: all clean

all : $(SHLIB) 

$(SHLIB) : $(OBJECTS) 

$(BASGRA) : $(NEEDS_PARAMS) $(PARAMS)

$(NEEDS_PARAMS) : $(PARAMS)

$(NEEDS_ENVIRONMENT): $(ENVIRONMENT)

clean :
	rm -f $(OBJECTS) *.mod *.so *.o symbols.rds
